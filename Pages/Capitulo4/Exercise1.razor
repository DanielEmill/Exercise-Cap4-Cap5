@page "/Exercise1"
<!--Hacer un programa que muestre la tabla de multiplicar del 1 al 10 de cualquier nÃºmero.-->
<div class="card">
    <div class="card-header">
        <h1>Tabla de multiplicacion</h1>
    </div>
    <div class="card-body">
        <div class="col-md-4">
            <label>Ingresa un digito</label>
            <input placeholder="..." @bind="@num1" />
            <button class="btn btn-success ">Click</button>
        </div>
        <div class="col-md-2">
            @for (int i = 1; i <= 12; i++)
            {
                <p class="input-group-text">@(num1) x @(i) = @(i*num1)</p>
            }
        </div>
    </div>
</div>

@code {
    int num1;
}